import java.util.Scanner;
public class pratik6 {
    public static void Main(String[]args){
         float indeks=0.0F, weight,height;  //Define the variables.                                                      
         Scanner input= new Scanner(System.in);                                                                          
         System.out.println("Enter your height in meters. (For example: 1,72)");                                         
         height= input.nextFloat();                                                                                      
         System.out.println("Enter your weight in meters.(For example: 45,7)");                                          
         weight=input.nextFloat();                                                                                       
         indeks=(weight)/(height*height); //I got the calculation and information of the mass index from the link I mentioned in the source.
            if(indeks<18.5)                                                                                                 
            System.out.println("Your body mass index: "+ indeks +" Below ideal weight.");                               
            else if(18.5<indeks && indeks<24.9)                                                                             
            System.out.println("Your body mass index: " +indeks +" You are at the ideal weight.");                      
            else if(30<indeks && indeks<39.9)                                                                               
            System.out.println("Your body mass index: " + indeks + "You are above the ideal weight. (Obese)");          
            else if(40<indeks)                                                                                              
            System.out.println("Your body mass index: "+ indeks + "You are above the ideal weight. (Morbid obese)");    
                                                                                                                  
    }
}
