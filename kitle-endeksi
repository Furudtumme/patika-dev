import java.util.Scanner;
public class pratik6 {
    public static void Main(String[]args){
        float indeks=0.0F, boy,kilo;
        Scanner girdi= new Scanner(System.in);
        System.out.println("Boyunuzu metre cinsinden giriniz. (Örnek: 1,72)");
        boy= girdi.nextFloat();
        System.out.println("Kilonuzu kilogram cinsinden giriniz.(Örnek: 45,7)");
        kilo=girdi.nextFloat();
        indeks=(kilo)/(boy*boy);
        if(indeks<18.5)
            System.out.println("Vücut kitle endeksiniz: "+ indeks +" İdeal kilonun altında.");
        else if(18.5<indeks && indeks<24.9)
            System.out.println("Vücut kitle endeksiniz: " +indeks +" İdeal kilodasınız.");
        else if(30<indeks && indeks<39.9)
            System.out.println("Vücut kitle endeksiniz: " + indeks + " İdeal kilonun üstündsiniz.(Obez)");
        else if(40<indeks)
            System.out.println("Vücut kitle endeksiniz: "+ indeks + " İdeal kilonun üstündesiniz.(Morbid obez");

    }
}
